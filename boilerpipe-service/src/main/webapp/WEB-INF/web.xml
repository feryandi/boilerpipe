<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

    <servlet>
        <servlet-name>Boilerpipe_Servlet</servlet-name>
        <servlet-class>
            in.feryand.extract.servlet.AppServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Boilerpipe_Servlet</servlet-name>
        <url-pattern>/api/v1/extract</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Storage_Servlet</servlet-name>
        <servlet-class>
            in.feryand.extract.servlet.StorageServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Storage_Servlet</servlet-name>
        <url-pattern>/api/v1/storage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Receiver_Servlet</servlet-name>
        <servlet-class>
            in.feryand.extract.servlet.ReceiverServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Receiver_Servlet</servlet-name>
        <url-pattern>/_ah/push-handlers/receive</url-pattern>
    </servlet-mapping>

</web-app>